<%- include('../header.ejs') %>



<div class="container mt-3">
  <h2>Danh sách nhóm sản phẩm </h2>
  <a href="/cate/them" class="btn btn-primary">thêm mới </a>       
  <table class="table table-dark">
    <thead>
      <tr>
        <th>Tên Nhóm </th>
        <th>Hình Ảnh </th>
        <th>Giá</th>
        <th>chức năng</th>
      </tr>
    </thead>
    <tbody>
        <% cat.forEach(item=>{%>
      <tr>
        <td><%=item.name%></td>
        <td><img src="<%= item.img%>" alt="" width="150px" height="200px"></td>
        <td><%=item.gia%></td>
        <td> 
            <a href="/cate/edit/<%= item.id %>" class="btn btn-info">sửa </a>  
            <a href="/cate/delete/<%= item.id %>" class="btn btn-danger">xóa </a>  
        </td>
      </tr>
      <%})%>
    </tbody>
  </table>
</div>

<%- include('../footer.ejs') %>
